{
  "name": "my-personal-website",
  "version": "1.0.1",
  "description": "My personal website",
  "author": "maku",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "start": "PORT=8080 nuxt start --port 8000",
    "export": "nuxt export",
    "serve": "nuxt serve",
    "generate": "nuxt generate",
    "format": "npx @biomejs/biome format --write .",
