    "precommit": "npm run lint:fix"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.2",
    "@mdi/font": "^7.4.47",
    "@nuxt/content": "^2.13.2",
    "@nuxtjs/color-mode": "^3.5.1",
    "@nuxtjs/critters": "^0.7.2",
    "@nuxtjs/google-fonts": "^3.2.0",
    "@nuxtjs/robots": "^4.1.7",
    "@types/node": "^22.7.0",
    "husky": "9.1.6",
    "lint-staged": "15.2.10",
    "nuxt": "^3.13.2",
    "sass": "^1.79.3",
    "typescript": "^5.6.2",
    "vite-plugin-vuetify": "^2.0.4",
    "vuetify": "^3.7.2"
  },
  "lint-staged": {
    "*.{js,vue}": ["npx @biomejs/biome format --write ."],
    "*.*": "npx @biomejs/biome lint --apply ."
  }
